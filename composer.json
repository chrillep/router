{
    "name": "maer/router",
    "description": "A small, simple, extendable one-file PHP router with groups, filters and named routes",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Magnus Eriksson",
            "email": "mange@reloop.se"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1"
    },
    "autoload": {
        "psr-4": {
            "Maer\\Router\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "7.*",
        "squizlabs/php_codesniffer": "^3"
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs --standard=PSR2 --extensions=php --ignore=vendor/,tests/ -n -s ./",
        "phpunit": "./vendor/bin/phpunit --strict-coverage --colors=always --testdox",
        "test": [
            "@cs",
            "@phpunit"
        ]
    }
}